doctype html
html(lang="en")
    head
        title Number Quiz
    body
        h1 The number Quiz

        p Your current score is #{score}

        if finish
            p You have completed the Number Quiz, with a score of #{score} out of #{total}.
            p 
                a(href="/clear" style="text-decoration: none;") Clear answers
        
        if !finish
            p Guess the next number in the sequence
        if !finish
            p #{sequence}
        if !finish
            form(action="/submit", method="POST")
                p Your answer:
                    input(type="number", name="answer", style="width: 50px;", required)
                input(type="submit")